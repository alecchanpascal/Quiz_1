<%- include('./partials/header') %>
<h5 style="color: red">You must sign in to post clucks</h5>
<div class="card">
    <div class="card-body">
        <form action="/clucks/signinFirst" method="post">
            <div class="form-group">
              <label>Username</label>
              <input required type="text" name="username" class="form-control" placeholder="e.g. Madam Welminster">
            </div>
            <br>
            <div id="btn-container">
              <button type="submit" class="btn btn-outline-secondary btn-lg">Sign In</button>
            </div>
          </form>
    </div>
</div>
<%- include('./partials/footer') %>